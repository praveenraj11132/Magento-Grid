<?xml version="1.0" encoding="UTF-8"?>

<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
   <table name="student" resource="default" engine="innodb" comment="Student Data">
      <column xsi:type="int" name="id" unsigned="false" nullable="false" identity="true" comment="ID" />
      <column xsi:type="varchar" name="name" nullable="false" length="20" comment="Name" />
      <column xsi:type="varchar" name="email" nullable="false" length="30" comment="Email" />
      <column xsi:type="varchar" name="mobile" nullable="false" length="255" comment="Mobile" />
      <constraint xsi:type="primary" referenceId="PRIMARY">
         <column name="id" />
      </constraint>
   </table>
</schema>